# Last Updated: 2022/06/09
import collections
import string

s = input("Please enter some text to be analyzed or press enter to use sample text. ").strip()
if s == "":
    s = """Imagine a vast sheet of paper on which straight Lines, Triangles, Squares, Pentagons, Hexagons, and other 
    figures, instead of remaining fixed in their places, move freely about, on or in the surface, but without the power 
    of rising above or sinking below it, very much like shadows - only hard and with luminous edges - and you will then 
    have a pretty correct notion of my country and countrymen. Alas, a few years ago, I should have said "my universe": 
    but now my mind has been opened to higher views of things. """

# Convert the string to lowercase characters.
lower_s = s.lower()

# Split the lowercase string into individual words.
words = list()
words = lower_s.split()

# Remove the punctuation from the lowercase words. Assume that all punctuation is either the first character or the last
# character of each item in the list.
punctuation_list = list(string.punctuation)
words_clean = list()
for w in words:
    if w == "":
        continue
    elif w in punctuation_list:
        continue
    elif w[-1] in punctuation_list and w[0] in punctuation_list:
        words_clean.append(w[1:-1])
    elif w[-1] in punctuation_list:
        words_clean.append(w[:-1])
    elif w[0] in punctuation_list:
        words_clean.append(w[1:])
    else:
        words_clean.append(w)


# Perform a count analysis on the words without punctuation characters.
words_size = len(words_clean)
print("The number of words in the sentence is", words_size)

words_set = set(words_clean)
words_set_size = len(words_set)
print("The number of unique words in the sentence is", words_set_size)

# Display the dictionary with the word counts and the number of distinct words in the original string.
word_freq = dict()
for w in words_clean:
    if w in word_freq:
        word_freq[w] += 1
    else:
        word_freq[w] = 1
print("The frequency of the words in the sentence is as follows:")
print(word_freq)

# Display dictionary ordered alphabetically
ordered_abc = input("Would you like to see the dictionary sorted from a to z? Enter yes or no. ").lower()
while not ordered_abc == "yes" and not ordered_abc == "no":
    ordered_abc = input("Please enter yes or no. ").lower()
if ordered_abc == "yes":
    print("The dictionary sorted from a to z is: ",
          collections.OrderedDict(sorted(word_freq.items(), key=lambda x: x[0])))

# Display dictionary ordered from the most to the least frequent
ordered_321 = input("Would you like to see the dictionary sorted from most to least? Enter yes or no. ").lower()
while not ordered_321 == "yes" and not ordered_321 == "no":
    ordered_321 = input("Please enter yes or no. ").lower()
if ordered_321 == "yes":
    print("The dictionary sorted by frequency from most to least is: ",
          collections.OrderedDict(sorted(word_freq.items(), key=lambda x:x[1], reverse=True)))

# Prompts user for a word, displays frequency if in dictionary
word_to_check = input("Please enter a word to check the frequency in the sentence. ")
if word_to_check in word_freq:
    print("The frequency of the word", word_to_check, "is", word_freq.get(word_to_check))
else:
    print("The word", word_to_check, "is not in the sentence.")


